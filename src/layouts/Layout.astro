---
import '../styles/global.styl'
// import Header from '../components/Header/index.astro'
import {ViewTransitions} from 'astro:transitions'
import ThreeModel from '../components/ThreeModel/'
// import TreeTown from '../components/ThreeModel/town.tsx'
// import { Image } from 'astro:assets';
// import MainvisualBgImage from '@/assets/img/mainvisual-bg.webp';
import Footer from '../components/Layouts/Footer.astro'
interface Props {
	title: string;
	description: string;
}
const { title , description } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&display=swap" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
<body transition:animate="none">
		<ThreeModel client:load />
		<!-- <Image src={MainvisualBgImage} class="mainvisualImage" alt=""/> -->
		<!-- <Header /> -->
		<slot />
		<Footer />
	</body>
</html>

<style lang="stylus">
	.mainvisualImage 
		width: 100%
		height: 100%
		object-fit: cover
		position: fixed
		top: 0
		left: 0
		z-index: 10
		pointer-events: none
</style>